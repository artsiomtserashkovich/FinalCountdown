@using PrintingMonitor.Printer.Connection
@inherits LayoutComponentBase

@inject IPrinterConnection Connection


<AuthorizeView>
    <Authorized>
        @if (Connection.IsConnected)
        {
            @Body
        }
        else
        {
            <RedirectTo Path="/connect" />
        }
    </Authorized>
    <NotAuthorized>
        <RedirectTo Path="/login"/>
    </NotAuthorized>
</AuthorizeView>

